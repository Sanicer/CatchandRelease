        android:layout_toRightOf="@id/letter_j" />

    <ImageView
        android:id="@+id/letter_l"
        android:src="@drawable/letter_l"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/letter_k" />

    <ImageView
        android:id="@+id/letter_m"
        android:src="@drawable/letter_m"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/letter_l" />

    <ImageView
        android:id="@+id/letter_n"
        android:src="@drawable/letter_n"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/letter_a_count"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/letter_o"
        android:src="@drawable/letter_o"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/letter_a_count"
        android:layout_toEndOf="@+id/letter_a_count" />

    <ImageView
        android:id="@+id/letter_p"
        android:src="@drawable/letter_p"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/letter_b_count"
        android:layout_toEndOf="@+id/letter_o" />

    <ImageView
        android:id="@+id/letter_q"
        android:src="@drawable/letter_q"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/letter_c_count"
        android:layout_toEndOf="@+id/letter_p" />

    <ImageView
        android:id="@+id/letter_r"
        android:src="@drawable/letter_r"
        android:layout_width="35dp"
        android:layout_height="35dp"
