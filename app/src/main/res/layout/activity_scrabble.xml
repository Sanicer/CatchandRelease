        android:layout_toRightOf="@id/letter_a" />

    <ImageView
        android:id="@+id/letter_c"
        android:src="@drawable/letter_c"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/letter_b" />

    <ImageView
        android:id="@+id/letter_d"
        android:src="@drawable/letter_d"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/letter_c" />

    <ImageView
        android:id="@+id/letter_e"
        android:src="@drawable/letter_e"
