    <ImageView
        android:id="@+id/letter_t"
        android:src="@drawable/letter_t"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/letter_f_count"
        android:layout_toEndOf="@+id/letter_s" />

    <ImageView
        android:id="@+id/letter_u"
        android:src="@drawable/letter_u"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/letter_t"
        android:layout_toEndOf="@+id/letter_t" />

    <ImageView
        android:id="@+id/letter_v"
        android:src="@drawable/letter_v"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/letter_u"
        android:layout_toEndOf="@+id/letter_u" />

    <ImageView
        android:id="@+id/letter_w"
        android:src="@drawable/letter_w"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/letter_v"
        android:layout_toEndOf="@+id/letter_v" />

    <ImageView
        android:id="@+id/letter_x"
        android:src="@drawable/letter_x"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/letter_w"
        android:layout_toEndOf="@+id/letter_w" />

    <ImageView
        android:id="@+id/letter_y"
        android:src="@drawable/letter_y"
        android:layout_width="35dp"
        android:layout_height="35dp"
