<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sanics.catchandrelease.HelpActivity">

    <TextView
        android:text="Stage 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="1: Use the arrow keys to angle the cannon. \n2: Use the round button to fire the cannon. Hold it down to increase the power. \n3: The power gauge of how strong your shot will be."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/round1example2"
        android:id="@+id/imageView7"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Stage 2:"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/round2example2"
        android:id="@+id/imageView8"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/imageView7" />

    <TextView
        android:text="Use the letters from stage 1 to create words of 3 or more letters. The more letters in the word, the more bonus points you receive. You lose the letters if you misspell."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true" />

</RelativeLayout>
